<h1 class="my-2">Iniciar sesion</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<form class="border border-dark p-2 rounded-lg shadow p-3 mb-5 bg-white rounded">
    <div class="field my-2">
        <%= f.label :email, class:"h2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
    </div>

    <div class="field my-2">
        <%= f.label :password, class:"h2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field my-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    </div>
    <% end %>

    <div class="actions my-2">
        <%= f.submit "Log in", class:"btn btn-outline-primary my-3" %>
    </div>

</form>
<% end %>
<%= render "devise/shared/links" %>