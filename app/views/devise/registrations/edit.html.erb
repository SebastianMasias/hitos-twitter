<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="container my-4 shadow p-3 mb-5 bg-white rounded">
    <div class="row">
        <div class="col">
            <div class="field">
                <%= f.label :email, class:"h2" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
            <!--Agregando campos al formulario-->
            <div class="field">
                <!--Para la imagen del usuario-->
                <%= f.label :image_url, class:"h2" %><br />
                <%= f.text_field :image_url, class:"form-control"%>
            </div>
            <!--Para el username/nickname-->
            <div class="field">
                <%= f.label :username, class:"h2" %><br />
                <%= f.text_field :username, class:"form-control"%>
            </div>
        </div>
        <div class="col">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="field">
                <%= f.label :password, class:"h2" %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control"%>
                <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
            </div>
            <div class="field">
                <%= f.label :password_confirmation, class:"h2" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>
            <div class="field">
                <%= f.label :current_password, class:"h2" %><br> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
            </div>
            <div class="actions">
                <%= f.submit "Update", class:"btn btn-primary m-3" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
<p>¿Descontento? <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro?" }, method: :delete, class:"btn btn-primary" %></p>

<%= link_to "Volver", :back, class:"btn btn-secondary" %>